{
   "comments": {
      // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
      "blockComment": ["<!--", "-->"]
   },
   // symbols used as brackets
   "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
   ],
   // symbols that are auto closed when typing
   "autoClosingPairs": [
      {
         "open": "{",
         "close": "}"
      },
      {
         "open": "[",
         "close": "]"
      },
      {
         "open": "(",
         "close": ")"
      },
      {
         "open": "<",
         "close": ">",
         "notIn": ["string"]
      },
      {
         "open": "$",
         "close": "$"
      }
   ],
   // symbols that can be used to surround a selection
   "surroundingPairs": [
      ["(", ")"],
      ["[", "]"],
      ["`", "`"],
      ["_", "_"],
      ["*", "*"],
      ["{", "}"],
      ["'", "'"],
      ["\"", "\""],
      ["$", "$"] // For math
   ],
   // symbols that can be used to define folding ranges
   "folding": {
      "offSide": true,
      "markers": {
         "start": "^\\s*<!--\\s*#?region\\b.*-->",
         "end": "^\\s*<!--\\s*#?endregion\\b.*-->"
      }
   },
   // define the word patterns
   "wordPattern": {
      "pattern": "(\\p{Alphabetic}|\\p{Number}|\\p{Nonspacing_Mark})(((\\p{Alphabetic}|\\p{Number}|\\p{Nonspacing_Mark})|[_])?(\\p{Alphabetic}|\\p{Number}|\\p{Nonspacing_Mark}))*",
      "flags": "ug"
   }
}
